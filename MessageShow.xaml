<Window x:Class="BurnInTestTool.MessageShow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BurnInTestTool"
        mc:Ignorable="d"
        Title="{DynamicResource app_name}" Height="150" Width="400" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="1" Grid.Row="1" x:Name="btnOK" HorizontalAlignment="Right" Content="{DynamicResource btnOK_Text}" Width="75" Margin="5" Click="btnOK_Click"/>
        <Image Grid.Column="0" Grid.Row="0" x:Name="imgInfo" Source="/images/icons8-info-48.png" Width="56" Height="56"/>
        <TextBlock Grid.Column="1" Grid.Row="0" x:Name="MessageTextBlock" TextWrapping="Wrap" Text="{DynamicResource app_name}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10"/>
    </Grid>
</Window>
