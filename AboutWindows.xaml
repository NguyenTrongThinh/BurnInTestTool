<Window x:Class="BurnInTestTool.AboutWindows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BurnInTestTool"
        mc:Ignorable="d"
        Title="{DynamicResource about_windows_name}" Height="180" Width="300">
    <StackPanel>
        <Image Source="/images/icons8-campfire-96.png" Width="60" Height="60"/>
        <TextBlock x:Name="MessageTextBlock" TextWrapping="Wrap" Text="{DynamicResource app_name}" TextBlock.FontSize="18" TextBlock.FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10"/>
        <TextBlock x:Name="MessageAbout" TextWrapping="Wrap" Text="{DynamicResource app_name}" TextBlock.FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10"/>
    </StackPanel>
</Window>
